{
  "compilerOptions": {
    "target": "es6",                                    
    "module": "commonjs", 
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,                            
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
  },
}
